<LoginScreen>:
    md_bg_color: 0.98, 0.98, 0.98, 1

    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"

        # Header - 15% de altura
        BoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            size_hint_y: 0.15

            MDLabel:
                text: "üçï"
                font_style: "H2"
                halign: "center"
                size_hint_y: 0.6

            MDLabel:
                text: "RESTAURANT POS"
                font_style: "H5"
                theme_text_color: "Primary"
                halign: "center"
                bold: True
                size_hint_y: 0.4

        # Card de login - 75% de altura
        MDCard:
            orientation: "vertical"
            elevation: 4
            padding: "20dp"
            spacing: "15dp"
            size_hint_y: 0.75

            MDLabel:
                text: "Ingrese su PIN"
                font_style: "H5"
                theme_text_color: "Primary"
                halign: "center"
                size_hint_y: 0.1

            # Display PIN - 15% de altura
            BoxLayout:
                orientation: "vertical"
                spacing: "5dp"
                size_hint_y: 0.15

                MDLabel:
                    id: display_pin
                    text: "‚Ä¢ ‚Ä¢ ‚Ä¢ ‚Ä¢ ‚Ä¢ ‚Ä¢"
                    font_style: "H4"
                    theme_text_color: "Primary"
                    halign: "center"
                    bold: True

                MDLabel:
                    id: label_mensaje
                    text: root.mensaje
                    font_style: "Body1"
                    theme_text_color: "Error" if "incorrecto" in root.mensaje else "Secondary"
                    halign: "center"

            # CONTENEDOR PARA CENTRAR EL GRID
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                size_hint_y: 0.75

                GridLayout:
                    cols: 3
                    spacing: "10dp"
                    size_hint: None, None
                    width: self.minimum_width
                    height: self.minimum_height

                    # Fila 1
                    NumButton:
                        text: "1"
                        on_press: root.agregar_digito("1")
                    NumButton:
                        text: "2" 
                        on_press: root.agregar_digito("2")
                    NumButton:
                        text: "3"
                        on_press: root.agregar_digito("3")

                    # Fila 2
                    NumButton:
                        text: "4"
                        on_press: root.agregar_digito("4")
                    NumButton:
                        text: "5"
                        on_press: root.agregar_digito("5")
                    NumButton:
                        text: "6"
                        on_press: root.agregar_digito("6")

                    # Fila 3
                    NumButton:
                        text: "7"
                        on_press: root.agregar_digito("7")
                    NumButton:
                        text: "8"
                        on_press: root.agregar_digito("8")
                    NumButton:
                        text: "9"
                        on_press: root.agregar_digito("9")

                    # Fila 4
                    DeleteButton:
                        text: "‚å´"
                        on_press: root.eliminar_digito()
                    NumButton:
                        text: "0"
                        on_press: root.agregar_digito("0")
                    EnterButton:
                        text: "‚úì"
                        on_press: root.realizar_login()

# Botones usando MDRectangleFlatButton
<NumButton@MDRectangleFlatButton>:
    size_hint: None, None
    size: "80dp", "80dp"
    theme_text_color: "Custom"
    text_color: 0.2, 0.2, 0.2, 1
    line_color: 0.85, 0.85, 0.85, 1
    font_size: "24sp"
    bold: True

<DeleteButton@MDRectangleFlatButton>:
    size_hint: None, None
    size: "80dp", "80dp"
    theme_text_color: "Custom"
    text_color: 0.96, 0.26, 0.21, 1
    line_color: 0.96, 0.26, 0.21, 1
    font_size: "24sp"
    bold: True

<EnterButton@MDRectangleFlatButton>:
    size_hint: None, None
    size: "80dp", "80dp"
    theme_text_color: "Custom"
    text_color: 0.3, 0.69, 0.31, 1
    line_color: 0.3, 0.69, 0.31, 1
    font_size: "24sp"
    bold: True
