# themes/global_styles.kv
# Estilos globales UNIFICADOS - Compatible con Kivy 2.3.0 y KivyMD 1.2.0
# NOTA: Los widgets personalizados est√°n en mis_widgets/responsive_widgets.py

# ==================== VARIABLES GLOBALES ====================
#:set primary_color ds_color('primary')
#:set secondary_color ds_color('secondary')
#:set success_color ds_color('success')
#:set error_color ds_color('error')
#:set warning_color ds_color('warning')
#:set light_bg ds_color('light')
#:set white_color ds_color('white')

# ==================== ESTILOS DE TEXTO ====================

<TitleLabel@MDLabel>:
    font_style: "H5"
    bold: True
    theme_text_color: "Custom"
    text_color: ds_color('dark')
    halign: "left"
    size_hint_y: None
    height: "48dp"

<SubtitleLabel@MDLabel>:
    font_style: "H6"
    bold: True
    theme_text_color: "Custom"
    text_color: ds_color('dark')
    halign: "left"
    size_hint_y: None
    height: "40dp"

<BodyLabel@MDLabel>:
    font_style: "Body2"
    theme_text_color: "Secondary"
    halign: "left"
    size_hint_y: None
    height: "auto"

<CaptionLabel@MDLabel>:
    font_style: "Caption"
    theme_text_color: "Hint"
    halign: "left"
    italic: True

# ==================== SEPARADORES ====================

<DividerLine@MDSeparator>:
    height: dp(1)
    md_bg_color: ds_color('gray_light')

# ==================== ESPACIADORES ====================

<SmallSpacer@Widget>:
    size_hint_y: None
    height: dp(8)

<MediumSpacer@Widget>:
    size_hint_y: None
    height: dp(16)

<LargeSpacer@Widget>:
    size_hint_y: None
    height: dp(24)

# ==================== ESTADO VAC√çO ====================

<EmptyStateContainer@MDBoxLayout>:
    orientation: "vertical"
    padding: dp(40)
    spacing: dp(20)
    
    MDLabel:
        text: "üì≠"
        font_size: sp(64)
        halign: "center"
        size_hint_y: None
        height: dp(80)
    
    MDLabel:
        text: "Sin datos disponibles"
        font_style: "H6"
        halign: "center"
        theme_text_color: "Secondary"
        size_hint_y: None
        height: dp(40)

# ==================== SCROLL PERSONALIZADO ====================

<CustomScrollView@ScrollView>:
    bar_width: dp(6)
    bar_color: ds_color('primary', 0.6)
    bar_inactive_color: ds_color('gray_light', 0.3)
    effect_cls: "ScrollEffect"
    always_overscroll: False

# ==================== CONTENEDORES ====================

<RoundedContainer@MDCard>:
    orientation: "vertical"
    elevation: 2
    radius: [dp(12)]
    padding: ds_spacing('md')
    spacing: ds_spacing('sm')
    md_bg_color: ds_color('white')

# ==================== UTILIDADES ====================

<PaddingBox@Widget>:
    size_hint_y: None
    height: dp(1)